<%= render 'layouts/navigation' %>

<div class="container" id="main-content" style="display: block;">
	<div class="card bg-light mb-3 mx-auto" style="max-width:90%;">
	  <div class="card-header"><b>Step 4:</b> Please tell us more about the template</div>
	  <div class="card-body p-3">
			<%= form_for(@template, url: "/template/fill/#{@template.id}") do |form| %>
				<div class="form-row p-1">
				  <%= form.label :name %>
				  <%= form.text_field :name, class: "form-control", placeholder: @template.name %>
				</div>
				<div class="form-row p-1">
				  <%= form.label "Number of signees (excluding yourself)" %>
				  <%= form.number_field :number_of_signees, in: 1..10, step: 1, class: "form-control", placeholder: @template.number_of_signees %>
				</div>
				<div class="form-group p-3" style="width: 100%; text-align: center;">
				  <%= form.submit 'Submit', class: "btn btn-primary" %>
				  <%= link_to 'Cancel', session_show_path, class: "btn btn-secondary" %>
				</div>

				<% if @template.errors.any? %>
					<%= render 'layouts/form_messages', form_messages: @template.errors %>
				<% end %>
			<% end %>
	  </div>
	</div>
</div>
