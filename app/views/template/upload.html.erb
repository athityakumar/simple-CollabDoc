<%= render 'layouts/navigation' %>

<div class="container" id="main-content" style="display: block;">
	<div class="card bg-light mb-3 mx-auto" id="storage" style="max-width:90%;">
	  <div class="card-header"><b>Step 3:</b> Upload a template</div>
	  <div class="card-body p-3">
			<%= form_for(@template, url: '/template/upload') do |form| %>
				<div class="form-row p-1">
				  <%= form.label :pdf_file %>
				  <%= form.file_field :pdf, accept: '.pdf', class: "form-control" %>
				</div>
				<div class="form-group p-3" style="width: 100%; text-align: center;">
				  <%= form.submit 'Upload document template', class: "btn btn-primary" %>
				  <%= link_to 'Cancel', session_show_path, class: "btn btn-secondary" %>
				</div>

				<% if @template.errors.any? %>
					<%= render 'layouts/form_messages', form_messages: @template.errors %>
				<% end %>
			<% end %>
	  </div>
	</div>
</div>
