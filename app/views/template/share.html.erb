<div class="container" id="main-content" style="display: block;">
	<div class="row" style="margin: 50 0 50 0px">
	  <div class="col-md-12 text-center">
	    <h2>Hey <%= @user.name %>! </h2>
	    <p>You've succesfully signed in. <%= link_to 'Wanna sign out?', session_destroy_path %></p>
	  </div>
	</div>

	<div class="card bg-light mb-3 mx-auto" id="storage" style="max-width:90%;">
	  <div class="card-header"><b>Select a template to share</b></div>
	  <div class="card-body p-3">
	  	<% @user.templates.each_with_index do |t, i| %>
				<div class="row p-1">
				  <span><%= i+1 %></span>
				  <%= link_to t.name, document_share_path(template_id: t.id) %>
				</div>
	  	<% end %>
	  </div>
	</div>
</div>
